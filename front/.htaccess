RewriteEngine On
RewriteBase /URBE-API-DRIVEN/front/

# 1. EXCEPCIÓN PARA ARCHIVOS FÍSICOS (Evita el error MIME y 404 de CSS/JS)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 2. REGLA PARA EL FORMULARIO DE REGISTRO
RewriteRule ^formulario/([a-zA-Z0-9_-]+)/?$ paginas/formulario/index.html?inst=$1 [L,QSA]

# 3. REGLA PARA SEDES (Login)
RewriteCond %{REQUEST_URI} !^/URBE-API-DRIVEN/front/(dist|paginas|assets|resources)
RewriteRule ^([a-zA-Z0-9_-]+)/?$ index.html?inst=$1 [L,QSA]